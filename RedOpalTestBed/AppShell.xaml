<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RedOpalTestBed.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RedOpalTestBed"
    Shell.FlyoutBehavior="Flyout">
    

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Insert Staff"
        ContentTemplate="{DataTemplate local:AddStaffPage}"
        Route="AddStaffPage" />
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:Settings}"
        Route="Settings" />

</Shell>
