<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RedOpalTestBed"
             x:Class="RedOpalTestBed.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="JohnButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="LightGray"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="MinimumWidthRequest" Value="100"/>
                <Setter Property="MinimumHeightRequest" Value="50"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
                
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
