<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedOpalTestBed.AddStaffPage"
             Title="Add Staff">
    <ScrollView>
        <StackLayout Padding="20">
            <Entry x:Name="nameEntry" Placeholder="Name" />
            <Entry x:Name="phoneEntry" Placeholder="Phone" Keyboard="Telephone" />
            <Entry x:Name="departmentIdEntry" Placeholder="Department ID" Keyboard="Numeric" />
            <Entry x:Name="streetEntry" Placeholder="Street" />
            <Entry x:Name="cityEntry" Placeholder="City" />
            <Entry x:Name="stateEntry" Placeholder="State" />
            <Entry x:Name="zipEntry" Placeholder="ZIP" Keyboard="Numeric" />
            <Entry x:Name="countryEntry" Placeholder="Country" />

            <Button Text="Save New Staff Member" Clicked="AddStaff_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>